{
    "manifest_version": 2,
    "name": "sxt",
    "version": "1.0",

    "description": "sxt (school extension) is a simple plugin to use librus grading system and scraping school website like lesson plan",
    "icons": {
        "48": "icon.png"
    },

    "homepage_url": "https://github.com/wartuu/sxt",


    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "src/menu.html",
        "default_title": "sxt"
    },


    "permissions": ["*://zsl.gliwice.pl/*", "storage", "webRequest", "activeTab"]

}